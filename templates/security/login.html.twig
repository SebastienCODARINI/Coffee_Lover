{% extends 'base.html.twig' %}

{% block body %}
	<div id="scroll-point" class="my-4">{{ ''|raw }}
		{{ ''|raw }}</div>

	<div class="container-fluid">
		<div class="row">
			<div
				class="col-md-6 d-flex align-items-center">
				<!-- picture on left -->
				<img src="{{ asset('images/403.png') }}" alt="Coffee Image" class="img-fluid center mb-3 rounded- "/>
			</div>
			<div class="col-md-6 d-flex align-items-center">

				<form class="form-signin features-section m-4" method="post" action="{{ path('app_security_login') }}">
					<h1 class="h3 mb-3 fw-normal text-center">Connectez-vous</h1>

					<div class="form-floating mb-3">
						<input type="email" name="_username" class="form-control" id="floatingInput" placeholder="name@example.com"/>
						<label for="floatingInput">Votre Email</label>
					</div>
					<div class="form-floating mb-3">
						<input type="password" name="_password" class="form-control" id="floatingPassword" placeholder="Password"/>
						<label for="floatingPassword">Votre mot de passe</label>
					</div>

					<div class="section-btn mt-3">
						<button type="submit" class="btn btn-rounded btn-quiz" data-mdb-ripple-init data-mdb-ripple-color="white">Se connecter</button>
					</div>

					<div class="mt-3 text">
						<p>
							Pas encore inscrit ?
							<a class="btn btn-rounded btn-quiz mt-2" href="{{ path('app_register') }}">Par ici</a>
						</p>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
