{% extends 'back-office/base.html.twig' %}

{% block title %}Modifier un Utilisateur
{% endblock %}

{% block body %}
<div class="container center mb-5" style="max-width: 60rem;">
	<section class="features-section m-4">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6">
					<h1 class="text-center text-muted fw-bold mb-4">Modifier un utilisateur</h1>

					{{ form_start(form) }}

						<div class="mb-3">
							{{ form_label(form.firstname, 'Nom') }}
							{{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_label(form.lastname, 'Prénom') }}
							{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_label(form.email, 'Email') }}
							{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_label(form.roles, 'Rôles') }}
							{{ form_widget(form.roles, {'attr': {'class': 'form-control'}, 'multiple': true}) }}
						</div>

						<div class="section-btn mt-3">
							<button type="submit" class="btn btn-rounded btn-quiz" data-mdb-ripple-init data-mdb-ripple-color="white">Ajouter</button>
						</div>

					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</section>
</div>
{% endblock %}